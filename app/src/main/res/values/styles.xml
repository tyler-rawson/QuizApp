<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/margin_12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/fontSize_15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionNumberStyle" parent="questionStyle">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:layout_marginRight">@dimen/margin_12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/fontSize_14sp</item>
        <item name="android:drawablePadding">@dimen/padding_5dp</item>
    </style>

    <style name="EditTextQ5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/hintExample</item>
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:ems">3</item>
        <item name="android:inputType">number</item>
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/fontSize_15sp</item>
        <item name="android:theme">@style/AppTheme.EditText</item>
        <item name="android:drawablePadding">@dimen/padding_5dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_24dp</item>
        <item name="android:layout_marginRight">@dimen/margin_12dp</item>
        <item name="android:drawablePadding">@dimen/padding_5dp</item>
    </style>

    <style name="SubmitButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_12dp</item>
        <item name="android:layout_marginTop">@dimen/margin_6dp</item>
    </style>

</resources>
